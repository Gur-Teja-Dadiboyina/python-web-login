pipeline {
    agent any

    environment {
        IMAGE          = "guruteja934/python-login"
        AWS_REGION     = "ap-south-1"
        CLUSTER_NAME   = "my-eks-cluster"
        K8S_DEPLOYMENT = "python-login-deployment"
        K8S_SERVICE    = "python-login-service"
        APP_PORT       = "8082"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Gur-Teja-Dadiboyina/python-web-login.git'
                // checkout scm  <-- optional, not needed if using git() above
            }
        }

        stage('Set Dynamic Tag') {
            steps {
                script {
                    def timestamp = new Date().format('yyyyMMdd-HHmm', TimeZone.getTimeZone('UTC'))
                    env.TAG = "v${env.BUILD_ID}-${timestamp}"
                    echo "Using image tag: ${env.TAG}"
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                  docker build \\
                    --build-arg PORT=${APP_PORT} \\
                    -t ${IMAGE}:${TAG} .
                """
            }
        }

        stage('Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    retry(3) {
                        sh """
                            echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
                            docker push ${IMAGE}:${TAG}
                            docker logout || true
                        """
                    }
                }
            }
        }

        stage('Update Deployment YAML') {
            steps {
                sh "sed -i 's|image: *.*|image: ${IMAGE}:${TAG}|' deployment.yaml"
            }
        }

        stage('Configure AWS & Kubeconfig') {
            steps {
                withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-eks-creds' ]]) {
                    sh """
                        aws eks update-kubeconfig --name ${CLUSTER_NAME} --region ${AWS_REGION}
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-eks-creds' ]]) {
                    sh """
                        kubectl apply -f deployment.yaml
                        kubectl apply -f service.yaml

                        kubectl set image deployment/${K8S_DEPLOYMENT} \
                          ${K8S_DEPLOYMENT}=${IMAGE}:${TAG} --record || true

                        kubectl rollout status deployment/${K8S_DEPLOYMENT} --timeout=180s
                    """
                }
            }
        }

        stage('Print Public URL') {
            steps {
                withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-eks-creds' ]]) {
                    sh """
                        PUBLIC_HOST=\$(kubectl get svc ${K8S_SERVICE} -o jsonpath='{.status.loadBalancer.ingress[0].hostname}')
                        if [ -z "\$PUBLIC_HOST" ]; then
                          PUBLIC_HOST=\$(kubectl get svc ${K8S_SERVICE} -o jsonpath='{.status.loadBalancer.ingress[0].ip}')
                        fi
                        echo "Your application is live at: http://\${PUBLIC_HOST}:${APP_PORT}/"
                    """
                }
            }
        }
    }
}

